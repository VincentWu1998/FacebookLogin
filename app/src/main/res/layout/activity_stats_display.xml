<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.facebooklogintest.MainActivity"
    android:background="@color/colorDarkBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight=".5">
        </Space>

        <TextView
            android:id="@+id/top"
            android:fontFamily="@font/simplifica"
            android:text="Your Quick Stats"
            android:textSize="60dp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight=".2">
        </Space>

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/center_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_marginLeft="5dp" >


                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorOffWhite"
                    android:textAlignment="center"
                    android:text="Hello "
                    android:fontFamily="@font/exo_thinitalic"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorOffWhite"
                    android:textAlignment="center"
                    android:fontFamily="@font/exo_thinitalic"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/return_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/com_facebook_button_login_background_color"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text=" Return "
                    android:fontFamily="@font/exo_semibolditalic"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorOffWhite"
                    android:textAlignment="center"
                    android:text="or"
                    android:fontFamily="@font/exo_thinitalic"
                    android:visibility="invisible"/>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1.7"></Space>
    </LinearLayout>
</RelativeLayout>
